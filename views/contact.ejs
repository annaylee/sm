<!-- contact page -->
<%- include ('./partials/navbar') %>
<div class="container">
    <div class="row mt-5 justify-content-center align-items-center">
        <div class="col-md-6">
  
          <!-- card body -->
          <div class="card card-body">
  
            <!-- header -->
            <h3 class="fw-bold text-center my-3">
                <i class="fa fa-envelope" aria-hidden="true"></i>
                Contact Us
            </h3>

            <!-- error messages if any -->
            <%- include('./partials/messages') %>
  
            <!-- FORM -->
            <form action="/contact" method="POST">
  
              <div class="form-group">
                <label for="name" class="form-label">Name</label>
                <input type="name" id="name" name="name" class="form-control" 
                       value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
  
              <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" 
                       value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>

              <div class="form-group">
                <label for="comments" class="form-label">Comments</label>
                <textarea id="comments" name="comments" class="form-control" ><%= typeof comments != 'undefined' ? comments : '' %></textarea>
              </div>

              <button type="submit" class="btn btn-altbrown btn-block mt-2" style="width: 100%;">Submit</button>
  
            </form>
   
          </div> <!-- end of card -->
        </div> <!-- end of col -->
    </div> <!-- end of row -->
</div> <!-- end of container -->
    